{
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer,target=/workspaces/.devcontainer,type=bind",
    "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "containerUser": "vscode",
  "postCreateCommand": [
    "apt-get update && apt-get install -y git build-essential cmake"
  ]
}
